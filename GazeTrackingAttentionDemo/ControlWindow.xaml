<Window x:Class="GazeTrackingAttentionDemo.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GazeTrackingAttentionDemo"
        xmlns:cam="clr-namespace:WebcamControl;assembly=WebcamControl"
        mc:Ignorable="d"
        Title="ControlWindow" 
        Width="1920"
        Height="1200"
        Loaded="onLoad"
        WindowStyle="None"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" x:Name="controller"></ContentControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label x:Name="stateLabel" FontSize="18" >Setup</Label>
            <Label x:Name="userLabel" FontSize="18">User</Label>
            <Label x:Name="currentTestLabel" FontSize="18">Test 0 of 0</Label>
            <Label x:Name="currentTestName" FontSize="18">NO TEST</Label>
            <Label x:Name="currentTestMedium" FontSize="18">NO TEST</Label>

        </StackPanel>
    </Grid>
    
</Window>
