<UserControl x:Class="GazeTrackingAttentionDemo.UserControls.CalibrationCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GazeTrackingAttentionDemo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="onLoad">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel>
            <Label FontSize="45">Calibrating Eye Tracker...</Label>
            <Button x:Name="doneCalibrating"  FontSize="18" Margin="0,50,0,0" Width="150" Click="DoneCalibrating_Click">Done</Button>
        </StackPanel>
    </Grid>
</UserControl>
