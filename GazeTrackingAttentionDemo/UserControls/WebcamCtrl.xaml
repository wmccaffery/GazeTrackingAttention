<UserControl x:Class="GazeTrackingAttentionDemo.UserControls.WebcamCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GazeTrackingAttentionDemo.UserControls"
             mc:Ignorable="d" 
             xmlns:cam="clr-namespace:WebcamControl;assembly=WebcamControl"
             Loaded="onLoad"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <cam:Webcam Grid.Row="0" x:Name="WebcamViewer" Margin="10"
                    HorizontalAlignment="Stretch"
                    
                    VerticalAlignment="Stretch"
                    
                    FrameRate="60"       

                    VideoDirectory="C:\Videos"

                    VideoDevice="{Binding logiHdPro}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <!--<Button Click="Record_Click">record</Button>
            <Button  Click="Stop_Click">stop</Button>-->
        </StackPanel>
    </Grid>
</UserControl>
